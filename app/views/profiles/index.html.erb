<h1>Listing profiles</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Camera type</th>
      <th>Camera model name</th>
      <th>Profession</th>
      <th>Mobile number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.full_name %></td>
        <td><%= profile.camera_type_id %></td>
        <td><%= profile.camera_model_name %></td>
        <td><%= profile.profession %></td>
        <td><%= profile.mobile_number %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
